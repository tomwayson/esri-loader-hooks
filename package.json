{
  "version": "0.2.0",
  "description": "Custom React hooks for using the ArcGIS API for JavaScript with esri-loader",
  "keywords": [
    "react",
    "arcgis",
    "esri",
    "esri-loader"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "esri-loader": ">=2.13.0",
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "esri-loader-hooks",
  "author": "tom@tomwayson.com",
  "module": "dist/esri-loader-hooks.esm.js",
  "size-limit": [
    {
      "path": "dist/esri-loader-hooks.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/esri-loader-hooks.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.1",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "esri-loader": "^3.2.0",
    "husky": "^7.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^5.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^3.9.10"
  }
}
